.root{
    background: #efeff4;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
}
.line{
    padding-top: 30rpx;
}
.line text{
    color: #999;
    font-size: 28rpx;
    margin-left: 40rpx;
}
.line-control{
    border-bottom: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}
.line-control .item{
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    text-align: left;
    color: #1c7bee;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative
}
.line-control .item:active{
    background: #d9d9d9;
}
.line-control .item-inner{
    border-bottom: #d9d9d9 1px solid;
}
.line-control .item:last-child .item-inner{
     border:none;
}
.line-control .switch{
    margin-top: 15rpx;
}
.line-control text{
    display: inline-block;
    vertical-align: top;
    height: 100%;
    margin-right: 10rpx;
}
.line-control .switch-status{
    color: #999;
    position: absolute;
    right: 40rpx;
    top: 0;
    height: 90rpx;
    line-height: 90rpx;
}
.line-control .item.disabled{
    color: #999
}
.line .demo{
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    text-align: left;
    color: #333;
    background-color: #fff;
    position: relative;
    font-size: 32rpx;
    padding-left: 40rpx;
}
.line .demo .link{
    position: absolute;
    right: 40rpx;
    top: 0rpx;
    color: #999;
}
.hide{
    display: none
}